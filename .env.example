# PM OS Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ====================================
# Google Drive MCP (Phase 1)
# ====================================
# Setup Guide: mcp/setup_guides/GOOGLE_DRIVE_SETUP.md
GDRIVE_CLIENT_ID=your_google_client_id_here
GDRIVE_CLIENT_SECRET=your_google_client_secret_here
GDRIVE_REFRESH_TOKEN=your_google_refresh_token_here

# ====================================
# Jira MCP (Phase 2)
# ====================================
# Setup Guide: mcp/setup_guides/JIRA_SETUP.md
JIRA_API_TOKEN=your_jira_api_token_here
JIRA_EMAIL=your_jira_account_email_here
JIRA_DOMAIN=yourcompany.atlassian.net

# ====================================
# Linear MCP (Alternative to Jira - Phase 2)
# ====================================
# Setup Guide: mcp/setup_guides/LINEAR_SETUP.md
LINEAR_API_KEY=your_linear_api_key_here
LINEAR_TEAM_ID=your_linear_team_id_here

# ====================================
# Slack MCP (Phase 3)
# ====================================
# Setup Guide: mcp/setup_guides/SLACK_SETUP.md
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_APP_TOKEN=xapp-your-slack-app-token-here
SLACK_PRODUCT_CHANNEL_ID=C0XXXXXXXXX

# ====================================
# Notion MCP (Phase 3)
# ====================================
# Setup Guide: mcp/setup_guides/NOTION_SETUP.md
NOTION_API_TOKEN=secret_your_notion_integration_token_here
NOTION_DATABASE_ID=your_notion_database_id_here

# ====================================
# Snowflake MCP (Phase 4)
# ====================================
# Setup Guide: mcp/setup_guides/SNOWFLAKE_SETUP.md
SNOWFLAKE_ACCOUNT=yourcompany.snowflakecomputing.com
SNOWFLAKE_USER=product_analyst_readonly
SNOWFLAKE_PASSWORD=your_snowflake_password_here
SNOWFLAKE_WAREHOUSE=PRODUCT_WH
SNOWFLAKE_DATABASE=ANALYTICS
SNOWFLAKE_SCHEMA=PRODUCT

# ====================================
# Optional: Other Services
# ====================================

# GitHub (for automated PR creation)
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# OpenAI (if using for embeddings or fallback)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic (for direct API usage outside IDE)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# ====================================
# Application Configuration
# ====================================

# Environment (development, staging, production)
NODE_ENV=development

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Feature Flags
ENABLE_PARALLEL_AGENTS=true
ENABLE_SYSTEM_EVALUATOR=false
