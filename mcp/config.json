{
  "mcpServers": {
    "note": "MCP integrations will be added progressively across phases",
    "google-drive": {
      "status": "active",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-gdrive"],
      "env": {
        "GOOGLE_CLIENT_ID": "${GOOGLE_DRIVE_CLIENT_ID}",
        "GOOGLE_CLIENT_SECRET": "${GOOGLE_DRIVE_CLIENT_SECRET}",
        "GOOGLE_REFRESH_TOKEN": "${GOOGLE_DRIVE_REFRESH_TOKEN}"
      },
      "disabled": false,
      "setup_guide": "mcp/setup_guides/GOOGLE_DRIVE_SETUP.md",
      "description": "Read-only access to Google Drive documents for historical context retrieval"
    },
    "phase2": {
      "jira": {
        "status": "planned",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-jira"],
        "env": {
          "JIRA_API_TOKEN": "${JIRA_API_TOKEN}",
          "JIRA_EMAIL": "${JIRA_EMAIL}",
          "JIRA_DOMAIN": "${JIRA_DOMAIN}"
        },
        "disabled": true,
        "setup_guide": "mcp/setup_guides/JIRA_SETUP.md"
      }
    },
    "phase3": {
      "slack": {
        "status": "planned",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-slack"],
        "env": {
          "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
          "SLACK_APP_TOKEN": "${SLACK_APP_TOKEN}"
        },
        "disabled": true,
        "setup_guide": "mcp/setup_guides/SLACK_SETUP.md"
      },
      "notion": {
        "status": "planned",
        "command": "npx",
        "args": ["-y", "@notionhq/client"],
        "env": {
          "NOTION_API_TOKEN": "${NOTION_API_TOKEN}",
          "NOTION_DATABASE_ID": "${NOTION_DATABASE_ID}"
        },
        "disabled": true,
        "setup_guide": "mcp/setup_guides/NOTION_SETUP.md"
      }
    },
    "phase4": {
      "snowflake": {
        "status": "planned",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-snowflake"],
        "env": {
          "SNOWFLAKE_ACCOUNT": "${SNOWFLAKE_ACCOUNT}",
          "SNOWFLAKE_USER": "${SNOWFLAKE_USER}",
          "SNOWFLAKE_PASSWORD": "${SNOWFLAKE_PASSWORD}",
          "SNOWFLAKE_WAREHOUSE": "${SNOWFLAKE_WAREHOUSE}",
          "SNOWFLAKE_DATABASE": "${SNOWFLAKE_DATABASE}",
          "SNOWFLAKE_SCHEMA": "${SNOWFLAKE_SCHEMA}"
        },
        "disabled": true,
        "setup_guide": "mcp/setup_guides/SNOWFLAKE_SETUP.md"
      }
    }
  },
  "instructions": {
    "enable_integration": "To enable an MCP integration: 1) Set up credentials per setup guide, 2) Add credentials to .env file, 3) Change 'disabled: true' to 'disabled: false' for that service",
    "security": "NEVER commit credentials. All sensitive values should be in .env (gitignored) and referenced here via ${VARIABLE_NAME}",
    "testing": "After enabling, restart your IDE and verify the MCP connection with a simple read operation"
  }
}
